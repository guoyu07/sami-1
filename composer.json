{
    "name": "schnittstabil/sugared-sami",
    "type": "library",
    "description": "Sami sweetened with ease",
    "license": "MIT",
    "keywords": ["sugared", "preconfigured", "sami", "phpdoc"],
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@schnittstabil.de"
        }
    ],
    "autoload": {
        "psr-4": { "Schnittstabil\\Sugared\\Sami\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Schnittstabil\\Sugared\\Sami\\": "tests" }
    },
    "require": {
        "php": ">=5.6.0",
        "sami/sami": "^3.2",
        "schnittstabil/composer-extra": "^0.5",
        "schnittstabil/get": "^2.0"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "^0.3",
        "phpmetrics/phpmetrics": "^1.10",
        "satooshi/php-coveralls": "^1.0",
        "symfony/finder": "3.0.4 as 2.1",
        "schnittstabil/sugared-cs": "^0.1",
        "schnittstabil/sugared-phpunit": "^0.5"
    },
    "extra": {
        "schnittstabil\/sugared-sami test namespace": {
            "files": "src",
            "filter": null,
            "build_dir": "test-build\/sami",
            "cache_dir": "test-build\/cache\/sami"
        }
    },
    "bin": [
        "sugared-sami"
    ],
    "scripts": {
        "clean": "rm -rf build/",
        "doc": [
            "./sugared-sami",
            "phpmetrics --report-html build/phpmetrics/index.html src/"
        ],
        "lint": [
            "sugared-cs"
        ],
        "test": [
            "sugared-phpunit",
            "composer lint"
        ]
    }
}
